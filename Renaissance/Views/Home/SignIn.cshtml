@model Renaissance.Models.UserSignIn
@{
    ViewBag.Title = "signin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
if(Session["userName"] == null)
{
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Test Ground</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    @Styles.Render("~/Content/css/signin.css")


</head>

<body>

    <div class="contianer-fluid" style="opacity:0.9;">
        <div class="row">
            <div class="col-lg-4 col-xs-12">
            </div>
            <div class="col-lg-4 col-xs-12">

                <div class="card mt-5">
                    <div class="container mb-5">
                        @using (Html.BeginForm("SignIn", "Home", FormMethod.Post, htmlAttributes: new { @class = "ml-5" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group ml-2">
                                <h2 class="text-secondary" style="margin-left:25%; margin-top:10%;">Sign In</h2>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.userName, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "form-control", @placeholder = "enter username" } })
                                        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.password, htmlAttributes: new { @class = "control-label col-md-8" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @placeholder = "enter password" } })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    </div>
                                </div>


                                <div class="col-md-10">
                                    <input class="mt-3 btn btn-secondary" type="submit" name="submitbtn" value="Sign In">
                                </div>
                            </div>
                            <p>Don't have an account? <a href="@Url.Action("Registration", "Registration")">Register</a></p>
                            <p class="text-success">@ViewBag.noPasswordMessage</p>
                            <p class="text-danger">@ViewBag.wrongPasswordMessage</p>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-xs-12">
            </div>
        </div>
    </div>



</body>

</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}

}
